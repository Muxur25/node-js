			<form action='/profile/update/action' method='post'>
				<div class="mb-3">
					<label for="name" class="form-label">email</label>
					<input type="name" class="form-control" name="email" id="name" value="{{email}}">
				</div>
				<div class="mb-3">
					<label for="name" class="form-label">username</label>
					<input type="name" class="form-control" name="username" id="name" value="{{username}}">
				</div>
