<div class='container'>
	<div class='row'>
		<div class='col-md-6 offset-3'>
			<div class='card mb-5 mt-5'>
				<div class='card-body'>
					<div class='list-group mb-1'>
						<a href='#' class='list-group-item list-group-item-action'>
							<img
								src='https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg'
								class='rounded-circle float-start'
								style='height: 30px;'
								alt='...'
							/>
							<h5 class='card-title'>{{diery.user.username}}</h5>
						</a>
					</div>
					<p class='card-text'>{{diery.text}}</p>
					<p class='card-text'><small
							class='text-muted'
						>{{diery.createdAt}}</small></p>
				</div>
				{{#if diery.imageUrl}}
					<img src='{{diery.imageUrl}}' class='card-img-bottom' alt='...' />
				{{/if}}

			</div>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-6 offset-3'>

			<div class='card-body'>
				<form
					action='/diery/comment/{{diery.id}}'
					method='post'
					enctype='application/x-www-form-urlencoded'
				>

					{{#if errorCom}}
						<div class="alert alert-warning" role="alert">
							{{errorCom}}
						</div>
					{{/if}}
					<div class='mb-3'>
						<label for='text' class='form-label'>Add new Comment</label>
						<textarea
							class='form-control'
							id='exampleFormControlTextarea1'
							rows='4'
							name='comment'
						></textarea>
					</div>
					<input type='hidden' name='_csrf' value='{{csrfToken}}'>
					<button type='submit' class='btn btn-primary mt-3'>Add Commet</button>
				</form>
			</div>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-8 offset-2'>
			{{#if comment}}
				{{#each comment}}
					<div class='card mb-3'>
						<div class='row g-0'>
							<div class='col-md-4'>
								<img
									src='https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg'
									class='img-fluid rounded-start'
									alt='...'
									style='width: 180px;'
								/>
							</div>
							<div class='col-md-8'>
								<div class='card-body'>
									<h5 class='card-title'>{{name}}</h5>
									<p class='card-text'>{{comment}}</p>
									<p class='card-text'><small
											class='text-body-secondary'
										>{{createdAt}}</small></p>
								</div>
							</div>
						</div>
					</div>
				{{/each}}
			{{/if}}
		</div>
	</div>
</div>