<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 offset-3">
			<form action='/auth/register/user' method='post' novalidate>
				{{#if error}}
					<div class="alert alert-warning" role="alert">
						{{error}}
					</div>
				{{/if}}

				{{#if errorPass}}
					<div class="alert alert-warning" role="alert">
						{{errorPass}}
					</div>
				{{/if}}

				<div class="mb-3">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" name="email" id="email" value='{{oldValue.email}}'>
				</div>
				<div class="mb-3">
					<label for="name" class="form-label">Name</label>
					<input type="name" class="form-control" name="name" id="name" value='{{oldValue.name}}'>
				</div>
				<div class="mb-3">
					<label for="password" class="form-label">Password</label>
					<input type="password" class="form-control" name="password" id="password" value='{{oldValue.password}}'>
				</div>
				<div class="mb-3">
					<label for="password2" class="form-label">Repeat password</label>
					<input type="password" class="form-control" name="password2" id="password2" value='{{oldValue.password2}}'>
				</div>
				<input type='hidden' name='_csrf' value='{{csrfToken}}'>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>