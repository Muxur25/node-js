<main>
	<h1>Users list</h1>

	{{#if users}}
		{{#each users}}
			<div class='card'>
				<img
					src='https://www.w3schools.com/howto/img_avatar.png'
					alt='Avatar'
					style='width:100%'
				/>
				<div class='container'>
					<h4><b>Name: {{username}}</b></h4>
					<p>Age: {{age}}</p>
					<a href='http://localhost:3000/users/{{id}}' class='btn'>More info...</a>
					<a href='/users/edit/{{id}}' class='btn'>edit info...</a>
					<form action='/users/delete/{{id}}' method='post'>
						<button type='submit' class='btn'>Delete</button>
					</form>
				</div>
			</div>
		{{/each}}
	{{else}}
		<p>Userlarni barcha listi...</p>
	{{/if}}
</main>